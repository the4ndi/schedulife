<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepagebackground"
    tools:context=".Login_SignUp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:layout_marginTop="200dp"
        android:padding="45dp"
        android:src="@drawable/schedullifelogo" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-280dp"
        android:layout_gravity="center"
        android:layout_marginBottom="-80dp"
        android:background="@drawable/ic_rectangle_grad"
        android:fontFamily="arial"
        android:text="Sign-Up"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="23sp" />

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-160dp"
        android:layout_gravity="center"
        android:layout_marginBottom="-140dp"
        android:background="@drawable/ic_rectangle_grad"
        android:fontFamily="arial"
        android:text="Log-In"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/signuplogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Come and Utilize the Best way to Organize Life!"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="-225dp"
        android:textSize="14sp"
        android:fontFamily="arial"
        />

</LinearLayout>